@page
@model GestionRecursosHumanos.Pages.Cargo.EditModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<h4>Cargos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Cargo.IdCargos" />

            <div class="form-group">
                <label asp-for="Cargo.TituloCargo" class="control-label"></label>
                <input asp-for="Cargo.TituloCargo" class="form-control"></input>
                <span asp-validation-for="Cargo.TituloCargo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cargo.DescripcionCargos" class="control-label"></label>
                <input asp-for="Cargo.DescripcionCargos" class="form-control"></input>
                <span asp-validation-for="Cargo.IdCargos" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary"> Back to Cargos List</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}